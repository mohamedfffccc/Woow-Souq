<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/cart_item_back"
    android:layout_margin="@dimen/_3sdp"
    android:layout_width="match_parent" android:layout_height="@dimen/_100sdp">
    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/logo"
        android:background="@color/whiteback"
        android:layout_margin="@dimen/_5sdp"
        android:layout_alignParentStart="true"
        android:id="@+id/cart_item_iv_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cart_item_iv_image"
        android:layout_margin="@dimen/_2sdp"
        android:text="black"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/extra_light"
        android:id="@+id/cart_item_tv_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/cart_item_iv_image"
        android:layout_margin="@dimen/_2sdp"
        android:text="bl/klndack"
        android:layout_below="@id/cart_item_tv_name"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/darkblue"
        android:fontFamily="@font/extra_light"
        android:id="@+id/cart_item_tv_price"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:background="@color/whiteback"
        android:layout_toEndOf="@id/cart_item_iv_image"
        android:orientation="horizontal"
        android:layout_below="@id/cart_item_tv_price"
        >
        <ImageView
            android:id="@+id/cart_item_btn_add_item"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="1"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:id="@+id/cart_item__item_count"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_gravity="center"
            android:textColor="@color/textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/cart_item_btn_remove_item"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_remove_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cart_item_btn_delete"/>
</RelativeLayout>